<script>
  // Open modal on button click
  document.getElementById("mvhvAdBtn").addEventListener("click", () => {
    document.getElementById("mvhvAdModal").style.display = "flex";
  });

  // Close modal on close icon click
  document.getElementById("mvhvCloseModal").addEventListener("click", () => {
    document.getElementById("mvhvAdModal").style.display = "none";
  });

  // Close modal if clicking outside the modal content
  window.addEventListener("click", function (e) {
    if (e.target.id === "mvhvAdModal") {
      document.getElementById("mvhvAdModal").style.display = "none";
    }
  });

  // Form submit handler with fetch
  const adForm = document.getElementById("mvhvAdForm");
  adForm.addEventListener("submit", async (e) => {
    e.preventDefault();

    const formData = {
      email: adForm.email.value,
      name: adForm.name.value,
      details: adForm.details.value,
    };

    try {
      const res = await fetch("/send-advert", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(formData),
      });

      const data = await res.json();

      if (res.ok) {
        // ✅ Show friendly popup
        const popup = document.getElementById("mvhvSuccessPopup");
        popup.style.display = "block";

        // Hide after 4 seconds
        setTimeout(() => {
          popup.style.display = "none";
        }, 4000);

        // Reset form and close modal
        adForm.reset();
        document.getElementById("mvhvAdModal").style.display = "none";
      } else {
        alert(data.message || "Failed to send your request.");
      }
    } catch (err) {
      alert("Error sending request. Please try again.");
      console.error(err);
    }
  });
</script>


