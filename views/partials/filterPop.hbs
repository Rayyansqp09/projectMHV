                    <input type="number" id="Shot" name="Shot">
                </div>

                <div class="field">
                    <label for="dribbles">Dribbles:</label>
                    <input type="number" id="dribbles" name="dribbles">
                </div>

                <div class="field">
                    <label for="mnt">Minutes Played:</label>
                    <input type="number" id="mnt" name="mnt" required>
                </div>

                <div class="field">
                    <label for="Motm">MOTM (1/0):</label>
                    <input type="number" id="Motm" name="Motm" min="0" max="1">
