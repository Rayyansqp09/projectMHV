        confirmButtonText: 'Awesome',
        confirmButtonColor: '#3085d6',
        background: '#f0f9ff',
      });
    },
    theme: { color: "#3399cc" }
  };

  const rzp = new Razorpay(options);
  rzp.open();
};

</script>
