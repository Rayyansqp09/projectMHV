<style>
    .season-content {
        display: none;
    }

    .season-content.active {
        display: block;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const select = document.getElementById("seasonSelect");
        const contents = document.querySelectorAll(".season-content");

        function showSeasonContent(seasonId) {
            contents.forEach(div => div.classList.remove("active"));
            const target = document.getElementById(seasonId);
            if (target) {
                target.classList.add("active");
            }
        }

        // Initially show current season (2024-25)
        const defaultSeason = "season2025";
        select.value = defaultSeason;
        showSeasonContent(defaultSeason);

        // Change event
        select.addEventListener("change", function () {
            const selectedSeason = this.value;
            if (selectedSeason) {
                showSeasonContent(selectedSeason);
            }
        });
    });
</script>