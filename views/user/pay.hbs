<script>
  let paypalRendered = false;

  document.getElementById("donateBtn").onclick = async function () {
    const inr = document.getElementById("donationAmount").value;
    const usd = document.getElementById("usdAmount").value;

    // ‚ùå Both or neither filled
    if ((inr && usd) || (!inr && !usd)) {
      Swal.fire({
        icon: 'warning',
        title: 'Choose One',
        text: 'Please enter either INR or USD donation amount (not both).',
        confirmButtonColor: '#f27474',
      });
      return;
    }

    // ‚úÖ Razorpay flow (INR)
    if (inr && !usd) {
      const amount = parseInt(inr);
      if (!amount || amount < 1) {
        Swal.fire({
          icon: 'error',
          title: 'Invalid INR Amount',
          text: 'Please enter a valid INR donation.',
          confirmButtonColor: '#d33',
        });
        return;
      }

      const response = await fetch("/pay", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ amount: amount * 100 })
      });

      const data = await response.json();

      const options = {
        key: "rzp_test_41qaGoGnSDVd5u",
        amount: amount * 100,
        currency: "INR",
        name: "Mbappe vs Haaland vs Vinicius",
        description: "Fan Donation",
        order_id: data.orderId,
        handler: function (response) {
          Swal.fire({
            icon: 'success',
            title: 'Thank You!',
            text: 'Thank you for your support and donation!',
            confirmButtonText: 'Awesome',
            confirmButtonColor: '#3085d6',
            background: '#f0f9ff',
          });
        },
        theme: { color: "#3399cc" }
      };

      const rzp = new Razorpay(options);
      rzp.open();
    }

    // ‚úÖ PayPal flow (USD)
    else if (usd && !inr) {
      const amount = parseFloat(usd);
      if (!amount || amount < 1) {
        Swal.fire({
          icon: 'error',
          title: 'Invalid USD Amount',
          text: 'Please enter a valid USD donation.',
          confirmButtonColor: '#d33',
        });
        return;
      }

      if (!paypalRendered) {
        paypal.Buttons({
          createOrder: function (data, actions) {
            return actions.order.create({
              purchase_units: [{
                amount: { value: amount.toFixed(2) }
              }]
            });
          },
          onApprove: function (data, actions) {
            return actions.order.capture().then(function (details) {
              Swal.fire({
                icon: 'success',
                title: 'Thank You!',
                text: 'Donation received via PayPal. Thank you, ' + details.payer.name.given_name + '!',
                confirmButtonColor: '#3085d6'
              });
            });
          },
          onError: function (err) {
            console.error('PayPal Error:', err);
            Swal.fire({
              icon: 'error',
              title: 'Payment Failed',
              text: 'PayPal payment failed. Please try again.',
              confirmButtonColor: '#d33'
            });
          }
        }).render('#paypal-button-container');
        paypalRendered = true;
      }

      document.getElementById('paypal-button-container').scrollIntoView({ behavior: 'smooth' });
    }
  };
</script>
