<!-- Popup Modal -->
<div id="mvhvAdModal" class="mvhv-modal-overlay">
    <div class="mvhv-modal-content">
        <span id="mvhvCloseModal" class="mvhv-modal-close">&times;</span>
        <h3 class="mvhv-modal-title">Advertise With Us</h3>
        <form id="mvhvAdForm">
            <label for="mvhvAdEmail">Your Email:</label>
            <input type="email" id="mvhvAdEmail" name="email" placeholder="you@example.com" required>

            <label for="mvhvAdName">Your Page / Product / Service Name:</label>
            <input type="text" id="mvhvAdName" name="name" required>

            <label for="mvhvAdDetails">Details:</label>
            <textarea id="mvhvAdDetails" name="details" rows="4" required></textarea>

            <button type="submit" class="mvhv-donate-button fbv-button fbv-primary-button sbmt-btn">Submit</button>
        </form>

    </div>
</div>

<!-- ✅ Success Popup -->
<div id="mvhvSuccessPopup" class="mvhv-popup-success" style="display:none;">
  <div class="mvhv-popup-box">
    <p>📨 Your advertisement request just scored a goal! ⚽ We'll catch up with you soon.</p>
  </div>
</div>

<!-- Please Wait Popup -->
<div id="emailSendingPopup" class="mvhv-popup-wait" style="display:none;">
    <div class="mvhv-popup-box1">
        <p>✉️ Please wait, sending your email...</p>
    </div>
</div>
